<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
    </head>
    <body id="page-top">
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg fixed-top" id="mainNav">
            <%- include('../partials/topmenu'); %> 
        </nav>


        <!-- About Section-->
       
        <section class="page-section-top-padded mb-0" id="about">
            <%
            // check to see that the workspace is active
            if(workspace.active) {
                // check to see that the user is enrolled!
                if(user && user.enrollments && user.enrollments.filter(enrollment => enrollment.workspace.workspaceId == workspace.workspaceId).length > 0) {
                %>
                    <div class="container navbar-interior font-weight-bold text-primary">
                        <%- include('../partials/community-menu') %>
                        <%- include('../partials/welcome'); %>
                    </div>

                    <div class="container">

                        <div class="divider-custom">
                        </div>
                        <a href="/community/">Back to Community Home</a>
                        <h2>Workspace: <span class="text-primary" ><%- workspace.workspaceName %></span></h2>
                        <% if(!!locals.message){ %>
                            <div class="alert-message alert-message-success" role="alert">
                                <h3 ><%= message %></h3>
                                <p><%= (!!locals.message2)?message2:'' %></p>
                            </div>
                            
                        <% } %>
                        <div class="text-left mt-4">
                            <div id="story1" class="row justify-content-left">

                                <div class="col-lg-5">
                                    
                                    <h4 class="text-secondary">Path to workspace completion</h4>
                                    <%- include('./partials/workspace-path'); %>

                                    
                                </div>

                                <div class="col-lg-7">
                                    <%- include('./partials/workspace-completion'); %>
                                    

                                </div>
                                
                            </div>
                        </div>
                    
                    </div>
                <%
                }
                else {
                    %>
                    <h2>User not enrolled!</h2>
                    <a href="/community/">Back to Community Home</a>
                    <%
                }
            }
            else {
                %>
                <h2>Inactive Workspace</h2>
                <a href="/community/">Back to Community Home</a>
                <%
            }
            %>

        </section>

        <!-- Footer-->
        <footer class="footer text-center">
            <%- include('../partials/footer'); %>
        </footer>
        <!-- Copyright Section-->
        <div class="copyright py-4 text-center text-white">
            <%- include('../partials/copyright'); %>
        </div>
        <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes)-->
        <div class="scroll-to-top d-lg-none position-fixed">
            <a class="js-scroll-trigger d-block text-center text-white rounded" href="#page-top"><i class="fa fa-chevron-up"></i></a>
        </div>
        <%- include('../partials/jsincludes'); %>
    </body>
</html>